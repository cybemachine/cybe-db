{
    "include": [
        "./app/*.ts"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declarationDir": "./@types",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}