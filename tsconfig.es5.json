{
    "include": [
        "./ts/*.ts",
        "./ts/v*/*.ts"
    ],
    "compilerOptions": {
        "target": "ES2015",
        "outDir": "./dist/es5",
        "declarationDir": "./dist/es5/@types",
        "inlineSourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}